<main>
  <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-body-tertiary">
    <div class="col-md-6 p-lg-5 mx-auto my-5">
      <div class="mb-3">
        <%= image_tag asset_path('valorant-big-logo.svg'), class: 'logo-big', alt: 'VALORANT' %>
      </div>
      <h3 class="fw-normal text-muted mb-3">AGENTS</h3>
      <p class="lead">Dive into Valorant's diverse roster of agents, each with their own set of unique abilities. From swift duelists to strategic controllers, these characters offer dynamic gameplay and endless tactical possibilities.</p>
    </div>
  </div>
  <% @agents.each_with_index do |agent, index| %>
    <div class="d-md-flex flex-md-equal w-100 my-md-3 ps-md-3">
      <% if index.even? %>
        <div class="bg-body-secondary me-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden">
        <% else %>
          <div class="text-bg-dark me-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden">
          <% end %>
          <div class="my-3 p-3">
            <%= link_to agent_path(agent), class: 'link-unstyled' do %>
              <h2 class="display-5 text-decoration-underline"><%= agent.name.upcase %></h2>
            <% end %>
            <p class="lead"><%= agent.role.upcase %></p>
          </div>
          <%= image_tag asset_path('team-logo.png'), class: 'pic last', alt: 'team-logo' %>
        </div>
      </div>
    <% end %>
  </main>
  <%= content_for :footer do %>
    <p style="float: right;">
      <%= link_to "New Agent |", new_agent_path,class: 'link-unstyled' %>
    </p>
  <% end %>
