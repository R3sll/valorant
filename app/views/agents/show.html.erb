<main>
  <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-body-tertiary">
    <div class="col-md-6 p-lg-5 mx-auto my-5">
      <div class="mb-3">
        <%= image_tag asset_path('valorant-big-logo.svg'), class: 'logo-big', alt: 'VALORANT' %>
      </div>
      <h2 class="display-4"><%= @agent.name.upcase %></h2>
      <h3 class="fw-normal text-muted mb-3"><%= @agent.role.upcase %></h3>
      <p class="lead"><%= @agent.description %></p>
    </div>
  </div>
  <div class="d-md-flex flex-md-equal w-100 my-md-3 ps-md-3">
    <div class="bg-body-secondary me-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden">
      <div class="mb-3">
        <%= image_tag asset_path('agent-sample.avif'), class: 'pic agent', alt: 'agent sample' %>
      </div>
    </div>
  </div>
  <div class="d-md-flex flex-md-equal w-100 my-md-3 ps-md-3">
    <div class="bg-body-secondary me-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden">
      <div class="my-3 p-3">
        <h3 class="display-6">MAIN ABILITY</h3>
        <h4 class="fw-normal text-muted mb-3"><%= @agent.ability_name.upcase %></h4>
        <p class="lead"><%= @agent.ability_description %></p>
      </div>
    </div>
  </div>
  <%= content_for :footer do %>
    <p class="actions-links">
      <%= link_to "Edit |", edit_agent_path(@agent), class: 'link-unstyled' %>
      <%= link_to "Destroy |", agent_path(@agent),class: 'link-unstyled' , data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
    } %>
    </p>
  <% end %>
</main>
